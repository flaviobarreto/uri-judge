using System;
using System.Globalization;

namespace primeiro
{
    class Program
    {
        static void Main(string[] args)
        {

            int N, a, b, c;
            N = int.Parse(Console.ReadLine());
            a = 1;
            b = 2;
            c = 3;
            for (int i = 0; i < N; i++)
            {
                Console.WriteLine(a + " " + b + " " + c + " PUM");
                a += 4;
                b += 4;
                c += 4;

            }

        }
    }
}
